<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#403ff5"
    tools:context="com.example.xiaobozhang.ari.TutorialActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tutorial"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:textSize="40dip"
        android:background="#888888"
        android:textColor="#ffffff" />

    <TextView android:text="@string/tutorial_text" android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:background="#ffffff"
        android:textSize="30dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="watchVedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Video"
        android:id="@+id/button_watchVideo"
        android:background="#3fa9f5"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
